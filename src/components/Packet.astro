---
import Section from './Section.astro';
import { paket } from '../data/konfigurasi.js';
import { Image } from 'astro:assets';
---
<Section id="paket" className="bg-gray-50">
    <div class="flex flex-col items-center w-full text-center">
    <h2 class="text-3xl md:text-4xl font-bold">{paket.title}</h2>
        <p class="mt-4 max-w-2xl text-lg text-gray-600">
            {paket.subtitle}
        </p>

        {/* === Bagian Promo Dipindahkan dan Diberi Gaya === */}
        <div class="mt-8 mb-12 text-center p-6 bg-red-100 border-2 border-dashed border-red-400 rounded-2xl">
            <p class="text-xl text-red-800 font-semibold">
                Dapatkan
                <span class="block text-4xl font-extrabold my-2 text-red-600">PROMO</span>
                Hubungi kontak di bawah!
            </p>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 mx-auto mt-2 text-red-500 animate-bounce" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
            </svg>
        </div>
                
        <div class="w-full flex flex-wrap -mx-4 justify-center">
            {paket.packets.map((item) => (
                <div class="w-full md:w-1/2 lg:w-1/3 px-4 mb-8">
                    <div class="card h-full text-left group flex flex-col">
                        <div class="overflow-hidden">
                            <Image 
                                src={item.img} 
                                alt={`Gambar untuk ${item.name}`}
                                class="w-full h-64 object-cover transition-transform duration-500 ease-in-out group-hover:scale-110"
                                width={400}
                                height={256}
                            />
                        </div>
                        <div class="p-6 flex flex-col items-start grow">
                            <h3 class="text-2xl !text-gray-800 mb-2 font-semibold">{item.name}</h3>
                            <p class="text-gray-600 mb-6">{item.description}</p>
                            <a href="#maps" class="btn w-full text-center mt-auto bg-primary">
                                Info & Pemesanan
                            </a>
                        </div>
                    </div>
                </div>
            ))}
        </div>
        
    </div>
</Section>

